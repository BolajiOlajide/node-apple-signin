{
  "compilerOptions": {
    "skipLibCheck": true,
    "rootDir": "./src",
    "sourceMap": false,
    "moduleResolution": "node",
    "target": "ES2015",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/esm",
    "declaration": true
  },
  "include": ["./src", "./@types"],
  "exclude": ["node_modules", "**/__tests__/*", "dist"]
}
